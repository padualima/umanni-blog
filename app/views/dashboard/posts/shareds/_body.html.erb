<div class="row">
  <!-- Area Chart -->
  <div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4 ">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between ">
        <h6 class="m-0 font-weight-bold text-primary">Listando postagens <strong><%= status %></strong></h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <% @posts.each do |post| %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= link_to dashboard_post_path(post) do %>
            <div class="d-flex w-100 justify-content-between">
              <h4 class="mb-1">
                <strong><%= post.title %></strong>
              </h4>
              <small>Criado em <%= l post.created_at, format: :long %></small>
            </div>
            <p class="mb-1"><%= post.subtitle.truncate(50) %></p>
            <% end %>
            <small><%= sanitize post.body.truncate(100) %></small>
            <p class= "text-right icons-size mb-0">
              <%= link_to edit_dashboard_post_path(post) do %>
              <i class="fas fa-edit"></i>
              <% end %> |
              <%= link_to dashboard_post_path(post), method: :delete,
              data: { confirm: "Tem certeza que deseja excluir?"} do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            </p>
          </li>
        </ul>
        <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
