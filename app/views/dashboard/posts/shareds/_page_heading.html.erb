<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Postagens</h1>
  <%= link_to new_dashboard_post_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
  <i class="fas fa-plus fa-sm text-white-50"></i> Novo Post
  <% end %>
</div>
<!-- Content Row -->
<div class="row">
  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-4 col-md-4  mb-4 card-stats">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Postages Publicadas</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @posts_published.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-check-square fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-4 col-md-4  mb-4 card-stats">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Postagens desativadas</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @posts_inactived.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-file-excel fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-4 col-md-4 mb-4 card-stats">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Quantidade de comentarios em suas publicações</div>
            <div class="row no-gutters align-items-center">
              <div class="col-auto">
                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><%= @comments.count %></div>
              </div>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-comments fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
