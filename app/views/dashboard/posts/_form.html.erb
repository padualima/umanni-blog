<%= form_with(model: [:dashboard, post] )do |form| %>
  <% if post.errors.any? %>
    <% post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>
  <div class="field">
    <%= form.label :category_id %>
    <%= form.text_field :category_id %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status, {checked: true} %>
  </div>

  <%= form.submit "Confirmar" %>
<% end %>
