<%= form_with(model: [:dashboard, post] )do |form| %>
  <% if post.errors.any? %>
    <% post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.text_field :category_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.hidden_field :body, id: :post_body %>
    <%= form.rich_text_area :content, input: "post_body" %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.check_box :status, {checked: true, class: "form-control"} %>
  </div>

  <%= form.submit "Confirmar" %>
<% end %>
