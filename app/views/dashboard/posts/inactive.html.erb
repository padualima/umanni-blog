<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Postagens Inativas</h1>
  <%= link_to new_dashboard_post_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
  <i class="fas fa-plus fa-sm text-white-50"></i> Novo Post
  <% end %>
</div>

<div class="row">

  <!-- Area Chart -->
  <div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4 ">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between ">
        <h6 class="m-0 font-weight-bold text-primary">Listando Postagens Inativas</h6>
      </div>
      <!-- Card Body -->
      <!-- Card Body -->
      <div class="card-body">
        <div class="table-responsive-sm">
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Body</th>
                <th scope="col">Categoria</th>
                <th scope="col">Date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td> <%= post.id %></td>
                <td> <%= post.title %></td>
                <td> <%= post.subtitle %></td>
                <td><%= sanitize post.body %></td>
                <td><%= post.category.description %></td>
                <td> <%= l post.created_at, format: :short %></td>
                <td>
                  <%= link_to "Editar", edit_dashboard_post_path(post) %>
                  <%= link_to "Excluir", dashboard_post_path(post), method: :delete,
                  data: { confirm: "Tem certeza que deseja excluir?"} %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
