<% @posts.each do |post| %>
<div class="post-preview">
  <a href="post.html">
    <h2 class="post-title">
      <%= post.title %>
    </h2>
    <h3 class="post-subtitle">
      <%= post.subtitle %>
    </h3>
  </a>
  <p class="post-meta">Postado por
    <a href="#"><%= post.user.username %></a>
    em <%= l post.created_at, format: :long %>
  </p>
</div>
<% end %>

<hr>
<!-- Pager -->
<div class="clearfix">
  <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
</div>
